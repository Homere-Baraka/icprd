generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



/// ================
/// AUTH
/// ================

model User {
  id            String   @id @default(uuid(7)) @db.Uuid
  username      String?
  first_name    String?
  last_name     String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  
  role          Role   @default(USER)
  is_active     Boolean @default(true)
  
  teams         Team? @relation("UserTeam")
  accounts      Account[]
  sessions      Session[]

  password_resets  PasswordReset? @relation("UserPasswordReset")

  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at    DateTime?

  @@map("user")
}

enum Role{
  USER
  MEMBER
  CONTRIBUTOR
  ADMIN
}

model Account {
  id                String   @id @default(uuid(7)) @db.Uuid
  user              User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id            String   @id @default(uuid(7)) @db.Uuid
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String   @db.Uuid
  sessionToken  String   @unique
  expires       DateTime

  @@map("session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtoken")
}


/// ================
/// Password Recovery
/// ================

model PasswordReset {
  id        String   @id @default(uuid(7)) @db.Uuid
  token     String
  expiresAt DateTime
  createdAt DateTime @default(now())

  userId    String  @unique  @db.Uuid
  user User @relation("UserPasswordReset", fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset")
}


/// ================
/// Data models for the ICPRD website: Team, Posts, Testimonials
/// ================

model Team {
  id          String   @id @default(uuid(7)) @db.Uuid
  role        String?
  bio         String?
  imageUrl    String?
  socialLinks Json?
  phone      String?
  date_bith  String?

  userId    String @unique  @db.Uuid
  user      User   @relation("UserTeam", fields: [userId], references: [id])
  
  posts        Post[]
  testimonials Testimonial[]
  achievements Achievement[]
  gallery      Gallery[]
  partner      Partner[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("team")
}

model Achievement {
  id          String   @id @default(uuid(7)) @db.Uuid
  title       String
  description String
  imageUrl    String?
  date        DateTime
  category    String?

  teamId    String @db.Uuid
  author      Team   @relation(fields: [teamId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("achievement")
}

model Post {
  id          String   @id @default(uuid(7)) @db.Uuid
  title       String
  content     String
  excerpt     String?
  imageUrl    String?
  category    String?

  teamId    String @db.Uuid
  team      Team   @relation(fields: [teamId], references: [id])

  publishedAt DateTime?   @default(now())
  views       Int        @default(0)

  testimonials Testimonial[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("post")
}

model Testimonial {
  id          String   @id @default(uuid(7)) @db.Uuid
  name        String
  role        String?
  content     String
  imageUrl    String?

  postId      String?    @unique  @db.Uuid
  post        Post?      @relation(fields: [postId], references: [id])
  teamId    String    @unique  @db.Uuid
  author      Team      @relation(fields: [teamId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("testimonial")
}

model Gallery {
  id          String   @id @default(uuid(7)) @db.Uuid
  title       String?
  description String?
  imageUrl    String
  category    String?

  teamId      String @unique @db.Uuid
  author      Team   @relation(fields: [teamId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("gallery")
}

model Partner {
  id          String   @id @default(uuid(7)) @db.Uuid
  name        String
  logoUrl     String?
  websiteUrl  String?
  description String?

  teamId      String @unique @db.Uuid
  author      Team?   @relation(fields: [teamId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("partner")
}

model ContactMessage {
  id        String   @id @default(uuid(7)) @db.Uuid
  name      String
  email     String
  subject   String
  message   String
  read      Boolean   @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("contactmessage")
}
